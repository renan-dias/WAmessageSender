#encoding: utf-8
import browsers
from numpy import unicode_
import pywhatkit as wk
import pandas as pd

import urllib

#function for import contacts from xlsx file
def getContacts():
    contacts = pd.read_excel("contatos.xlsx")
    return contacts

#funcion for send message to each contact
def sendMsg():
    for i, phone in enumerate(getContacts['Mobile Phone']):
        FirstName = getContacts['First Name'][i]
        LastName = getContacts['Last Name'][i]
        msg = str("Oi, " + FirstName.title() + " " + LastName.title() + "! Para qualquer duvida em relação a sua matricula entre em contato com a gente pelo https://wa.me/553584796918")    
        text = urllib.parse.quote(msg)
        try:
            wk.sendwhatmsg_instantly(f'+55'+phone,text)
        except:
            print("Erro ao enviar mensagem para " + phone)
            continue
        
#function for close browser
def closeBrowser():
    browsers.close()